                    <!--android:textColor="#009719"-->
                    <!--android:textSize="15sp" />-->

                <!--<TextView-->
                    <!--android:id="@+id/profileBackers"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="16dp"-->
                    <!--android:layout_marginStart="16dp"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:text="#390,000"-->
                    <!--android:textColor="#009719"-->
                    <!--android:textSize="15sp" />-->
            <!--</LinearLayout>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/submitbox"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingTop="3dp"
                android:text="Bank Details"
                android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/profilefullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:paddingBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/enter_account_name"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="15sp"
                    android:drawablePadding="5dp"
                    android:backgroundTint="@color/font_color"
                    android:drawableLeft="@drawable/ic_person"
                    tools:ignore="TextViewEdits" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_bank" />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spinner_dose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/selectbank"
                    android:layout_marginTop="5dp"
                    app:hintText="Select Bank"
                    style="@style/FormTextAppearance"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/font_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_card" />

                <TextView
                    android:id="@+id/profileAcctNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:hint="Account No."
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/colorWhite"
                    android:textSize="15sp" />
            </LinearLayout>



            <Button
                android:id="@+id/update_profile"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/submitbox"
                android:fontFamily="monospace"
                android:text="@string/update_profile"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</FrameLayout>