<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.donald.crowdfunding.activities.Payment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="16dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    style="@style/bt_field_container"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <com.braintreepayments.cardform.view.SupportedCardTypesView
                        android:id="@+id/supported_card_types"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/paystack_payment" />

                    <TextView
                        android:id="@+id/amountPayable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimaryDark"
                        android:padding="10dp"
                        android:text="NGN 200,000"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <com.braintreepayments.cardform.view.CardForm
                android:id="@+id/card_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp" />

            <LinearLayout style="@style/bt_field_container">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:paddingBottom="@dimen/bt_margin"
                    android:paddingLeft="5dp"
                    android:paddingTop="50dp"
                    android:src="@drawable/ic_description" />

                <android.support.design.widget.TextInputLayout
                    style="@style/bt_text_input_layout"
                    android:paddingEnd="0dp"
                    android:paddingLeft="@dimen/bt_edit_text_icon_padding"
                    android:paddingStart="@dimen/bt_edit_text_icon_padding"
                    tools:ignore="RtlCompat">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/bt_payment_description"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="@string/payment_description"
                        android:inputType="text"
                        android:paddingTop="@dimen/bt_margin" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout style="@style/bt_field_container">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:paddingBottom="@dimen/bt_margin"
                    android:paddingLeft="5dp"
                    android:paddingTop="50dp"
                    android:src="@drawable/ic_email" />

                <android.support.design.widget.TextInputLayout
                    style="@style/bt_text_input_layout"
                    android:paddingLeft="@dimen/bt_edit_text_icon_padding"
                    android:paddingStart="@dimen/bt_edit_text_icon_padding"
                    tools:ignore="RtlCompat">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/bt_payment_email"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="@string/email_address"
                        android:inputType="text"
                        android:paddingTop="@dimen/bt_margin" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/email_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:paddingEnd="0dp"
                android:paddingLeft="@dimen/bt_mobile_number_explanation_padding"
                android:paddingStart="@dimen/bt_mobile_number_explanation_padding"
                android:text="Make sure that the email account is active "
                android:visibility="visible"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:background="@drawable/btn_login_bg"
                android:text="Proceed"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/card_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:paddingEnd="0dp"
                android:paddingLeft="@dimen/bt_mobile_number_explanation_padding"
                android:paddingStart="@dimen/bt_mobile_number_explanation_padding"
                android:textAlignment="center"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/paystack_"/>


    </LinearLayout>
</ScrollView>