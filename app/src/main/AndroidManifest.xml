<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.donald.crowdfunding.business">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.donald.crowdfunding.MyApplicationClass"
        android:allowBackup="true"
        android:icon="@drawable/crowdicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name="com.donald.crowdfunding.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.donald.crowdfunding.activities.LandingPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.donald.crowdfunding.activities.Signin" />
        <activity android:name="com.donald.crowdfunding.activities.Signup" />
        <activity android:name="com.donald.crowdfunding.activities.PasswordReset" />
        <activity android:name="com.donald.crowdfunding.activities.AddProfile" />
        <activity android:name="com.donald.crowdfunding.activities.Payment" />
        <activity android:name="com.donald.crowdfunding.fragments.SinglePost" />
        <activity android:name="com.donald.crowdfunding.fragments.AddComment"/>
    </application>

</manifest>